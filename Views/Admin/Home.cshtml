<!DOCTYPE HTML>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Habile Business Organization</title>
    <link href="~/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand">Habile Business Organization</a>
        </div>
        <div>
            <ul class="nav navbar-nav">
                <li>@*<a href="/Admin/Home">Home</a>*@
                @Html.ActionLink("Home", "Home", "Admin")
                </li>
                <li>@*<a href="/Home/Products">Products</a>*@
                @Html.ActionLink("Products", "Products", "Home")
                </li>
                <li>@*<a href="/Home/About">About</a>*@
                @Html.ActionLink("About", "About", "Home")
                </li>
                <li>@*<a href="/Home/Contact">Contact Us</a>*@
                @Html.ActionLink("Contact Us", "Contact", "Home")
                </li>
                <li>@*<a href="/Admin/SignIn">Sign In</a>*@
                @Html.ActionLink("Sign In/Sign Out", "SignIn/Sign Out", "Admin")
                </li>
                <li>@*<a href="/Admin/ViewOrder">View Orders</a>*@
                @Html.ActionLink("View Orders", "ViewOrder", "Admin")
                </li>
            </ul>

        </div>
    </nav>

    <div class="jumbotron">
        <h1 style="color:darkgreen">Habile Business Organization</h1>
        <p style="color:darkgreen">Polyester button manufacturers and General traders</p>
        <p><a class="btn btn-success btn-lg" role="button" href="/Home/About">Learn more</a></p>
    </div>
    <div class="row">

        <div class="col-lg-3">
            <div class=" panel panel-success">
                <div class="panel-heading"><h3 style="align-self:center">Customers</h3></div>
                <div class=" panel-body">
                    <label title="Register">Register now to place orders online</label>
                    <br />
                    <a class="btn btn-success btn-md" href="/Home/Register">Register</a>
                    <br />
                    <br />
                    <label title="Login">Already a customer?</label>
                    <br />
                    <a class="btn btn-success btn-md" href="/Home/Login">Login</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class=" panel panel-success">
                <div class="panel-heading"><h3 style="align-self:center">Our Products</h3></div>
                <div class=" panel-body">
                    <img src="~/Untitled2.png" />
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class=" panel panel-success">
                <div class="panel-heading"><h3 style="align-self:center">Orders</h3></div>
                <div class=" panel-body">
                    <label title="Register">Place an order here</label>
                    <br />
                    <a class="btn btn-success btn-md" href="/Home/Order">Order</a>
                    <br />
                    <br />
                    @*<label title="Login">View Orders</label>
                        <br />
                        <a class="btn btn-success btn-md" href="/Home/ViewOrder">View</a>*@
                </div>
            </div>
        </div>

    </div>






</body>
</html>

